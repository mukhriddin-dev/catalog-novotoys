---
import BaseHead from '../components/BaseHead.astro'
import Footer from '../components/Footer.astro'
import astropodConfig from '../../.config/astropod.config.json'
import { ViewTransitions, fade } from 'astro:transitions'

const {
    image,
    title = astropodConfig.name,
    description = astropodConfig.description,
} = Astro.props
---

<!doctype html>
<html lang="en" data-theme={astropodConfig.theme}>
    <head>
        <BaseHead title={title} description={description} image={image} />
        <ViewTransitions />
    </head>
    <body
        class="bg-[#F3F6F6] min-h-screen"
        transition:animate={fade({ duration: '0.5s' })}
    >
        <div class="container mx-auto lg:max-w-[1360px]">
            <div class="w-full">
                <main class="-mt-5 px-2 w-full">
                    <slot />
                </main>
            </div>
            <Footer />
        </div>
    </body>

    <script type="text/javascript">
        ;(function (m, e, t, r, i, k, a) {
            m[i] =
                m[i] ||
                function () {
                    ;(m[i].a = m[i].a || []).push(arguments)
                }
            m[i].l = 1 * new Date()
            for (var j = 0; j < document.scripts.length; j++) {
                if (document.scripts[j].src === r) {
                    return
                }
            }
            ;(k = e.createElement(t)),
                (a = e.getElementsByTagName(t)[0]),
                (k.async = 1),
                (k.src = r),
                a.parentNode.insertBefore(k, a)
        })(
            window,
            document,
            'script',
            'https://mc.yandex.ru/metrika/tag.js',
            'ym'
        )

        ym(98908359, 'init', {
            clickmap: true,
            trackLinks: true,
            accurateTrackBounce: true,
            webvisor: true,
        })
    </script>

    <noscript>
        <div>
            <img
                src="https://mc.yandex.ru/watch/98908359"
                style="position:absolute; left:-9999px;"
                alt=""
            />
        </div>
    </noscript>

</html>
