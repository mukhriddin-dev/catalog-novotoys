---
export interface Props {
    title: string
    description: string
    image: string
}

import astropodConfig from '../../.config/astropod.config.json'
const { title, description, image } = Astro.props

const display_image = image ? image : astropodConfig.cover
---

<link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
/>
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
    href="https://fonts.googleapis.com/css2?family=Funnel+Display:wght@300..800&family=Outfit:wght@100..900&display=swap"
    rel="stylesheet"
/>
<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href={astropodConfig.favicon} />
<meta name="generator" content={Astro.generator} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={astropodConfig.link} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta
    property="og:image"
    content={new URL(display_image, astropodConfig.link)}
/>

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={astropodConfig.link} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta
    property="twitter:image"
    content={new URL(display_image, astropodConfig.link)}
/>
